<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uestc.virtualtourism.SignInActivity">


    <ImageView
        android:id="@+id/title"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yonghuzhuc" />


    <ImageView
        android:id="@+id/user_name"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/name" />

    <EditText
        android:id="@+id/user_name_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:theme="@style/editTextStyle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toEndOf="@+id/user_name"
        app:layout_constraintTop_toTopOf="@+id/user_name" />

    <ImageView
        android:id="@+id/user_account"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:srcCompat="@drawable/accout" />

    <EditText
        android:id="@+id/user_account_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:theme="@style/editTextStyle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_account"
        app:layout_constraintEnd_toEndOf="@+id/user_name_edit"
        app:layout_constraintTop_toTopOf="@+id/user_account" />

    <ImageView
        android:id="@+id/user_pwd"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/user_account"
        app:layout_constraintTop_toBottomOf="@+id/user_account"
        app:srcCompat="@drawable/pwd" />


    <EditText
        android:id="@+id/user_pwd_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:theme="@style/editTextStyle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_pwd"
        app:layout_constraintEnd_toEndOf="@+id/user_account_edit"
        app:layout_constraintTop_toTopOf="@+id/user_pwd" />

    <ImageView
        android:id="@+id/user_age"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/user_pwd"
        app:layout_constraintTop_toBottomOf="@+id/user_pwd"
        app:srcCompat="@drawable/age" />


    <EditText
        android:id="@+id/user_age_edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:theme="@style/editTextStyle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/user_age"
        app:layout_constraintEnd_toEndOf="@+id/user_pwd_edit"
        app:layout_constraintTop_toTopOf="@+id/user_age" />



    <ImageView
        android:id="@+id/user_sex"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/user_age"
        app:layout_constraintTop_toBottomOf="@+id/user_age"
        app:srcCompat="@drawable/sex" />


    <CheckBox
        android:id="@+id/user_sex_male"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:checked="true"
        android:text="男"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/user_sex"
        app:layout_constraintTop_toTopOf="@+id/user_sex" />

    <CheckBox
        android:id="@+id/user_sex_female"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="80dp"
        android:text="女"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_sex_male"
        app:layout_constraintTop_toTopOf="@id/user_sex_male" />



    <ImageButton
        android:id="@+id/save_btn"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/save__2_" />


</androidx.constraintlayout.widget.ConstraintLayout>