    <ImageView
        android:id="@+id/title"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yonghuzhuc" />



    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:text="用户名:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/user_name_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toEndOf="@+id/user_name" />

    <TextView
        android:id="@+id/user_account"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:text="账    号:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />


    <EditText
        android:id="@+id/user_account_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_account"
        app:layout_constraintStart_toEndOf="@+id/user_account" />

    <TextView
        android:id="@+id/user_pwd"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:text="密    码:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/user_account"
        app:layout_constraintTop_toBottomOf="@+id/user_account" />

    <EditText
        android:id="@+id/user_pwd_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_pwd"
        app:layout_constraintStart_toEndOf="@+id/user_pwd" />

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:text="年    龄:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/user_pwd"
        app:layout_constraintTop_toBottomOf="@+id/user_pwd" />

    <EditText
        android:id="@+id/user_age_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_age"
        app:layout_constraintStart_toEndOf="@+id/user_age" />

    <TextView
        android:id="@+id/user_sex"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:text="性    别:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/user_age"
        app:layout_constraintTop_toBottomOf="@+id/user_age" />

    <CheckBox
        android:id="@+id/user_sex_male"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:checked="true"
        android:text="男"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/user_sex"
        app:layout_constraintTop_toTopOf="@+id/user_sex" />

    <CheckBox
        android:id="@+id/user_sex_female"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:text="女"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/user_sex_male"
        app:layout_constraintTop_toTopOf="@id/user_sex_male" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="保存"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>